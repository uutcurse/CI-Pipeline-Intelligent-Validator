{
  "type": "object",
  "required": [
    "pipeline_name",
    "version",
    "stages",
    "settings"
  ],
  "properties": {
    "pipeline_name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "stages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "build",
              "test",
              "deploy",
              "validate"
            ]
          },
          "timeout": {
            "type": "integer",
            "minimum": 1
          },
          "retry": {
            "type": "integer",
            "minimum": 0,
            "maximum": 5
          }
        }
      }
    },
    "settings": {
      "type": "object",
      "required": [
        "environment",
        "notify"
      ],
      "properties": {
        "environment": {
          "type": "string",
          "enum": [
            "dev",
            "staging",
            "prod"
          ]
        },
        "notify": {
          "type": "boolean"
        },
        "max_parallel": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}